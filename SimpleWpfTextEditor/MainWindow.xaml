<Window x:Class="SimpleWpfTextEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimpleWpfTextEditor"
        mc:Ignorable="d"
        Title="No file opened" Height="450" Width="800">
    <DockPanel LastChildFill="True">
        <Menu DockPanel.Dock="Top" Background="#EEE">
            <MenuItem Header="_File">
                <MenuItem Name="MenuItemOpen" Header="_Open" Click="MenuItemOpen_Click"/>
                <MenuItem Name="MenuItemSave" Header="_Save" Click="MenuItemSave_Click"/>
                <MenuItem Name="MenuItemSaveAs" Header="Save _As"/>
            </MenuItem>
        </Menu>
        <TextBox Name="MainTextBox" TextWrapping="Wrap" AcceptsReturn="True" AcceptsTab="True" TextChanged="MainTextBox_TextChanged">
        </TextBox>
    </DockPanel>
</Window>
