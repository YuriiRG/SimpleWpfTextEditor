<Window x:Class="SimpleWpfTextEditor.FontDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimpleWpfTextEditor"
        mc:Ignorable="d"
        Title="Choose font" Height="200" Width="130">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Text="Font family:" Grid.Row="0"
                   Margin="6,0,0,0"
                   VerticalAlignment="Center"/>
        <ComboBox Grid.Row="1"/>
        <TextBlock Text="Font size:" Grid.Row="2"
                   Margin="6,0,0,0"
                   VerticalAlignment="Center"/>
        <TextBox Name="FontSizeTextBox" Grid.Row="3"/>
        <Button Content="Save" Grid.Row="4" Click="SaveAndClose"/>
        <Button Content="Cancel" Grid.Row="5" Click="Close"/>
    </Grid>
</Window>
